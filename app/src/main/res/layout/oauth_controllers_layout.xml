<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/oAuthContainerlkjhlkjh"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnFbOAuth"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/fb_ic"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnGoogleOAuth"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="20dp"
        android:src="@drawable/google_ic" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnAppleOAuth"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:src="@drawable/apple_ic" />
</androidx.appcompat.widget.LinearLayoutCompat>
